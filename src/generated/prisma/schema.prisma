generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  role       String   @default("user") // "user" or "admin"
  createdAt  DateTime @default(now())
  answers    Answer[]
}

model Task {
  id    Int    @id @default(autoincrement())
  title String
  desc  String

  limit     DateTime
  createdAt DateTime @default(now())
  answers   Answer[]
}

model Answer {
  id          Int      @id @default(autoincrement())
  repo        String
  greade      Int
  submittedAt DateTime @default(now())
  feedback    String
  status      Boolean //0 : not Done , 1 : Done

  user_id Int
  task_id Int

  user User @relation(fields: [user_id], references: [id])
  task Task @relation(fields: [task_id], references: [id])
}
